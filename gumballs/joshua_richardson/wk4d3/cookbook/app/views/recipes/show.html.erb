<h1><%= @recipe.name %></h1>
<p><%= @recipe.meal_type %></p>
<p><%= @recipe.cooktime %></p>
<p><%= @recipe.servingsize %></p>
<p><%= @recipe.instructions %></p>
<p><%= @recipe.image_url %></p>

<h2>Ingredients:</h2>

<% @recipe.ingredients.each do |ingredient| %>
<p><%=ingredient.name %></p>
<% end %>

<p><%= link_to "Edit", edit_recipe_path(@recipe) %><br>
    <%= link_to 'Delete', @recipe, :method => :delete, :data => { :confirm => 'are you sure?' } %>
</p>

</div>
