<%= form_for @recipe do |f| %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.collection_check_boxes :ingredient_ids, Ingredient.all, :id, :name %>
  </p>
  <p>
    <%= f.label :meal_type %>
    <%= f.select :meal_type, Recipe.meal_types %> <!-- #defined in recipe.rb - where methods go -->
  </p>
  <p>
    <%= f.label :cooktime %>
    <%= f.text_field :cooktime %>
  </p>
  <p>
    <%= f.label :servingsize %>
    <%= f.text_field :servingsize %>
  </p>
  <p>
    <%= f.label :instructions %>
    <%= f.text_field :instructions %>
  </p>
  <p>
    <%= f.label :image_url %>
    <%= f.text_field :image_url %>
  </p>
  <p>
    <label for="">Book Title</label>
    <!-- <input type="text" name="product[category]"> -->
     <%= f.collection_select :book_id, @books, :id, :title %>
  </p>

<button>Submit</button>

<% end %>