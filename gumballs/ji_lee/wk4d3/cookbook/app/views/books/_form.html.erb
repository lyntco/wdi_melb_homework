<div class="container form-horizontal">
  <%= form_for @book do |f| %>
    
    <div class="form-group">
      <%= f.label :title, class: "col-sm-2 control-label" %>
      <div class="col-sm-8">
        <%= f.text_field :title, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :cuisine, class: "col-sm-2 control-label"  %>
      <div class="col-sm-8">   
        <%= f.text_field :cuisine, class: "form-control"  %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :image_url, class: "col-sm-2 control-label"   %>
      <div class="col-sm-8"> 
        <%= f.text_field :image_url, class: "form-control"  %>
      </div>
    </div>

    <button class="btn btn-lg btn-primary">Submit</button>

  <% end %>

</div>  