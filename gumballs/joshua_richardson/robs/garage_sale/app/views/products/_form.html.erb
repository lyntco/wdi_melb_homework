<%= form_for @product do |f| %>

  <p>
    <label for="">Name</label>
    <%= f.text_field :name %>
  </p>
  <p>
    <label for="">Price</label>
    <%= f.text_field :price %>
  </p>
  <p>
    <label for="">Category</label>
    <%= f.collection_select :category_id, @categories, :id, :name %>
  </p>

  <button>Go</button>

<% end %>