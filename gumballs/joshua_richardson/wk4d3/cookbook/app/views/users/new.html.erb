<h1>Sign Up</h1>
<% @user.error.full_messages %>

<% form_tag '/sign_up' do %>

  <p>
    <%= label_tag :username  %>
    <%= text_field_tag :username %>
  </p>
  <p>
    <%=label_tag :password %>
    <%= password_field_tag :password  %>
  </p>
  <p>
    <%= label_tag :password_confirmation %>
    <%= password_field_tag :password_confirmation %>
  </p>
  <button>Sign Up</button>

<% end -%>