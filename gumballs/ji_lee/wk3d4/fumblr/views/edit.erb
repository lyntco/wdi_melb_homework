<div class="margintop"></div>
<div class="wrapper col-md-12">
    <form action="/posts/<%= @post.id %>" method="post" class="form-horizontal">
      <div class="form-group">
        <label for="title" class="col-sm-3 right">Title</label>
        <div class="col-sm-7">  
          <input type="text" name="title" id="title" value="<%= @post.title %>" class="form-control">
        </div>
      </div>
      <div class="form-group">
        <label for="image_url" class="col-sm-3 right">Image URL</label>
        <div class="col-sm-7">
          <input type="text" name="image_url" value="<%= @post.image_url %>" class="form-control">
        </div>  
      </div>

      <div class="form-group">
        <label for="content" class="col-sm-3 right">Content</label>
        <div class="col-sm-7">
          <textarea name="content" id="" class="form-control"><%= @post.content %></textarea> 
        </div>  
      </div>

     
        <button class="btn btn-lg btn-primary">fumble it!</button>
    
    

    </form>

      <a href="/"><button class="btn btn-default home">Home</button></a>
</div> 