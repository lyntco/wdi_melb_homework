<div class="container">

  <p><h2><%= @recipe.name %></h2></p>
  <p><img src="<%= @recipe.image_url %>"></p>
  <p>Meal Type: <%= @recipe.meal_type %></p>
  <p>Cooktime: <%= @recipe.cooktime %> min</p>
  <p>Serving Size: <%= @recipe.servingsize %></p>
  <p>Instructions: <%= @recipe.instructions %></p>

  <h3>Ingredients: </h3>
  <% @recipe.ingredients.each do |ingredient| %>
    <p><%= ingredient.name %></p>  
  <% end %>
  
  <a href="/recipes"><button class="btn btn-default">back</button></a>
  <%= link_to 'edit', edit_recipe_path(@recipe.id), class: "btn btn-default" %>
  <%= link_to 'delete', @recipe, :method => :delete, :data => { :confirm => 'are you sure?' }, class: "btn btn-default"  %>
  
</div>


