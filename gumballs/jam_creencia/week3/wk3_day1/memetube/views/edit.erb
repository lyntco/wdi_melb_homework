<h2>Edit Video</h2>

<div class="edit">
	<form action="/videos/<%= @video.id %>" method="post">
		<label for="">Name</label>
		<input type="text" name="name" value="<%= @video.name %>" maxlength="30"><br>
		<label for="">Video URL</label>
		<input type="text" name="video_url" value="<%= @video.video_url %>"><br>
		<label for="">Brief Description</label>
		<input type="text" name="description" value="<%= @video.description %>" maxlength="30"><br>
		<label for="">Genre</label>
			<select name="genre">
			<% @genres.each do |genre| %>  	
				<% if @video.genre == genre %>
			  	<option value="genre" selected ><%= genre %></option>
			 	<% else %>
			 		<option value="genre"><%= genre %></option>
				<% end %>
			<% end %>
			  
			
			</select><br>
	
		<button class="btn" >Update</button>
	
	</form>
</div>